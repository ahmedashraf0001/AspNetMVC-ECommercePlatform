@model E_Commerce_Platform.ViewModels.ContactFormViewModel
@{
    Layout = "~/Views/Shared/_websiteLayout.cshtml";
}
<link rel="stylesheet" href="~/css/shop.css" />
<link rel="stylesheet" href="~/css/about.css" />
<link rel="stylesheet" href="~/css/contactus.css" />
<body>
    <div class="main-container">
        <div class="contactus">
            <div class="header">
                <span id="bigtext" class="text-gray fs-montserrat bold-600 fs-100">Home > Contact Us</span>
                <span class="big-wireless block lineheight fs-400 bold-700 fs-poppins">Contact Us</span>
            </div>
            <div class="contactus-container">
                <div class="contactus-text" data-aos="fade-up">
                    <div class="titles">
                        <div class="title-2 big-wireless block lineheight fs-400 bold-700 fs-poppins">Get In Touch</div>
                        <div class="title-3 text-black fs-100 bold-500 fs-poppins">We’d love to hear from you! Whether you have a question, need support, or just want to say hello, feel free to reach out to us.</div>
                    </div>
                    <form asp-action="SendEmail" asp-controller="Contact" method="post">
                        <div asp-validation-summary="All" style="color: red;" class="fs-100 bold-500 fs-poppins"></div>

                        <input asp-for="Name" style="color: gray;" class="text-gray fs-100 bold-500 fs-poppins" type="text" placeholder="Name">

                        <input asp-for="Email" style="color: gray;" class=" text-gray fs-100 bold-500 fs-poppins" type="text" placeholder="your E-mail">

                        <textarea asp-for="Message" style="color: gray;" rows="10" class=" text-gray fs-100 bold-500 fs-poppins" placeholder="Your Message Here"></textarea>

                        <button type="submit" class="large-btn bg-red text-white fs-poppins fs-50" data-aos="fade-up">Submit!</button>
                    </form>

                </div>
                <div class="contactus-map" data-aos="fade-up">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.835434509294!2d144.9537363153165!3d-37.81627977975148!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d43e50792fb%3A0x5045675218ce6e0!2sMelbourne%2C+Australia!5e0!3m2!1sen!2sus!4v1638821109382!5m2!1sen!2sus"
                            width="600"
                            height="450"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</body>  
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}