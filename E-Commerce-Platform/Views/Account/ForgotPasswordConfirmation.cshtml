
@{
    ViewData["Title"] = "ForgotPasswordConfirmation";
    Layout = "~/Views/Shared/_websiteLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 text-center" style="max-width: 400px; border-radius: 12px;">
        <div class="mb-3">
            <i class="bi bi-envelope-check text-success" style="font-size: 3rem;"></i>
        </div>
        <h4 class="fw-bold text-dark">Check Your Email</h4>
        <p class="text-muted">
            We've sent a password reset link to your email.
            Please check your inbox and follow the instructions to reset your password.
        </p>
        <a href="/" class="btn btn-primary w-100 mt-3">Return to Home</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
