@using E_Commerce_Platform.ViewModels
@model FailedCheckoutModel
@{
    ViewData["Title"] = "FailedCheckout";
    Layout = "~/Views/Shared/_websiteLayout.cshtml";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 text-center">
        <div class="card-body">
            <svg class="text-danger" width="80" height="80" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 0a8 8 0 1 0 8 8A8 8 0 0 0 8 0zm-2 4a1 1 0 0 1 1.707-.707l2.147 2.147 2.147-2.147a1 1 0 1 1 1.414 1.414l-2.147 2.147 2.147 2.147a1 1 0 1 1-1.414 1.414l-2.147-2.147-2.147 2.147a1 1 0 1 1-1.414-1.414l2.147-2.147-2.147-2.147A1 1 0 0 1 6 4z" />
            </svg>
            <h2 class="mt-3 text-danger">Payment Failed</h2>
            <p>@Model.ErrorMessage</p>
            <a asp-controller="Cart" asp-action="CartPage" class="btn btn-warning mt-3"><i class="bi bi-arrow-repeat"></i> Try Again</a>
            <a asp-controller="Ecommerce" asp-action="Home" class="btn btn-secondary mt-3"><i class="bi bi-house"></i> Return to Home</a>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        max-width: 400px;
    }

    svg {
        color: #dc3545;
    }
</style>
