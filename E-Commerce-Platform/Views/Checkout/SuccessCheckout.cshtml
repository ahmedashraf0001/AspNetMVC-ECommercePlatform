@{
    ViewData["Title"] = "Order Success";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

        svg {
            color: #28a745;
        }
    </style>
</head>
<body>
    <div class="card shadow-lg p-4">
        <div class="card-body">
            <svg class="text-success" width="80" height="80" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 8 0a8 8 0 0 1 8 8zm-3.97-4.03a.75.75 0 0 0-1.06-1.06L7 8.94 5.03 6.97a.75.75 0 1 0-1.06 1.06l2.5 2.5a.75.75 0 0 0 1.06 0l5-5z" />
            </svg>
            <h2 class="mt-3">Thank You for Your Order!</h2>
            <p>Your order has been placed successfully.</p>
            <p>Redirecting to home in <span id="timer">5</span> seconds...</p>
            <a asp-controller="Ecommerce" asp-action="Home" class="btn btn-primary mt-3">Return to Home</a>
        </div>
    </div>

    <script>
        let time = 5;
        setInterval(() => {
            if (time > 0) {
                document.getElementById('timer').innerText = --time;
            } else {
                window.location.href = '/';
            }
        }, 1000);
    </script>
</body>
</html>
