                    onclick="showWarning('@Model.User.FullName', '@Model.User.Id')">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="validation-summary"></div>
